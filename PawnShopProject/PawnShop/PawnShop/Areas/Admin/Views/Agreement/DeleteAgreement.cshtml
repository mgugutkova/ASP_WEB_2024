@using PawnShop.Core.Models.Agreement
@model AllAgreementViewModel
@{
	ViewBag.Title = "Delete Agreement";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="card">
			<div class="card-body">
				<h3 class="card-title text-center">Good Name: @Model.GoodName</h3>
				<p class="mb-0"><strong>Insert By:</strong> @Model.FirstName &nbsp; @Model.LastName</p>
				<p class="text-danger mt-3">Are you sure you want to delete?</p>
			</div>
			<div class="card-footer">
				<form asp-action="DeleteConfirmed" method="post">
					<input type="hidden" asp-for="Id" />
					<button type="submit" class="btn btn-danger">Confirm Delete</button>
				</form>
			</div>
			<a asp-action="All" class="btn btn-secondary">Cancel</a>
		</div>
	</div>
</div>
