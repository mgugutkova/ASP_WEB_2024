<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PawnShop - Admin area</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/PawnShop.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">

				<a class="navbar-brand text-danger" asp-area="Admin" asp-controller="Admin" asp-action="Index">PawnShop-Admin Area</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="Index">Home Admin</a>
						</li>	

						@if (User?.Identity?.IsAuthenticated ?? false)
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="All">All Users</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Admin" asp-controller="Shop" asp-action="All">All Goods in Shop</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Admin" asp-controller="Agreement" asp-action="All">All Agreements</a>
							</li>							
						}

					</ul>
					<partial name="_AdminPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - PawnShop
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

	@if(TempData[TempDataConstants.SuccessMessage] != null)
	{
		<script>
			message.ShowSuccess('[@TempDataConstants.SuccessMessage]');
		</script>
	}

	@if (TempData[TempDataConstants.ErrorMessage] != null)
	{
		<script>
			message.ShowSuccess('[@TempDataConstants.ErrorMessage]');
		</script>
	}
	@if (TempData[TempDataConstants.WarningMessage] != null)
	{
		<script>
			message.ShowSuccess('[@TempDataConstants.WarningMessage]');
		</script>
	}


</body>
</html>
