@using PawnShop.Core.Models.Interest

@model AddInterestViewModel
@{
	ViewBag.Title = "Add Interest";
}

<h2 class="text-center">@ViewBag.Title</h2>
<h5 class="text-center">AgreementId: @Model.AgreementId</h5>
<hr />
<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
	
			<div class="form-group">
				<label asp-for=AgreementViewModel.GoodName></label>
				<input asp-for=AgreementViewModel.GoodName disabled>
			</div>
			<div class="form-group">
				<label asp-for=AgreementViewModel.StartDate></label>
				<input asp-for=AgreementViewModel.StartDate disabled>
			</div>
	


		<form method="post">
			<div class="form-group">
				<label asp-for="ValueInterest"></label>
				<input asp-for="ValueInterest" class="form-control" />  @*  placeholder="8888888888"> *@
				<span asp-validation-for="ValueInterest" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DateInterest"></label>
				<input asp-for="DateInterest" class="form-control" disabled>
				<span asp-validation-for="DateInterest" class="small text-danger"></span>
			</div>

			<div class="text-center">
				<input class="btn btn-primary mt-3 " type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}