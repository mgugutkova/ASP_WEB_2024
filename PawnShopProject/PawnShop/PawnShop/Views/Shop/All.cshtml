@using PawnShop.Core.Models.Shop

@model IEnumerable<AllGoodsInShopViewModel>
@{
	ViewBag.Title = "All Goods in Shop";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewData.ModelState["Error"].Errors.First().ErrorMessage
	</div>
}

<table class="table table-striped">
	<thead>
		<tr>	
			<th>Goods</th>
			<th>Sell Price</th>
			<th>Sold Date</th>		
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			
			<tr>
				<td>@item.GoodsName</td>
				<td>@item.SellPrice</td>
				<td>@item.SoldDate</td>				
				<td>

					@if (User.IsInRole("AdminRole"))
					{
						<a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-info">Edit</a>

						<a asp-controller="Shop" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
					}
					
				</td>
			</tr>
		
		}
	</tbody>
</table>
