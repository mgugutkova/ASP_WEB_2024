@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewData.ModelState["Error"].Errors.First().ErrorMessage
	</div>
}

<table class="table table-striped">
	<thead>
		<tr>
			<th>Наименование</th>			
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td><label>@item.Name</label></td>
				<td>

				<td>
					<a asp-controller="Category" asp-action="EditCategory" asp-route-Id="@item.Id" class="btn btn-danger">Редактиране</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="text-center">
	<a asp-area="Admin" asp-controller="Category" asp-action="AddCategory" class="btn btn-secondary">Добавяне</a>
</div>

