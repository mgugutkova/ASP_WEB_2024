@using Helpdesk.Core.Models.Request
@model RequestViewModel
@{
	ViewBag.Title = "Request Details";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Edit" method="post" asp-antiforgery="false">

	<input type="hidden" name="Id" value="@Model.Id" />
	<input type="hidden" name="UserId" value="@Model.UserId" />
	<input type="hidden" name="CategoryId" value="@Model.CategoryId" />

	<table class="table table-hover">
	<thead>
		<tr>
			<th>Описание</th>
			<th>Статус</th>
			<th>Дата на приключване</th>
			<th>Разпределена на</th>
			<th>Коментар</th>
			<th></th>
		</tr>
	</thead>	

	<tr class="request-row" data-id="@Model.Id">
		<td class="form-group">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="small text-danger"></span>
		</td>

		<td class="form-group">
			<label asp-for="RequestState"></label>
			<input asp-for="RequestState" class="form-control" />
			<span asp-validation-for="RequestState" class="small text-danger"></span>
		</td>
		<td class="form-group">
			<label asp-for="EndDate"></label>
			<input asp-for="EndDate" class="form-control" readonly />
		</td>
		<td class="form-group">
			<label asp-for="OperatorName"></label>
			<input asp-for="OperatorName" class="form-control" />
			<span asp-validation-for="OperatorName" class="small text-danger"></span>
		</td>
		<td class="form-group">
			<label asp-for="Comment"></label>
			<input asp-for="Comment" class="form-control" />
			<span asp-validation-for="Comment" class="small text-danger"></span>
		</td>	
		
		<td class="text-center">
			<button type="submit" class="btn btn-primary">Запази</button>		
		</td>
	</tr>

	</table>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/RequestDetail.js"></script>
}

