@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewData.ModelState["Error"].Errors.First().ErrorMessage
	</div>
}

<table class="table table-striped">
	<thead>
		<tr>
			<th>Наименование</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td><label>@item.Name</label></td>
				<td>
					<a asp-controller="RequestState" asp-action="EditRequestState" asp-route-Id="@item.Id" class="btn btn-primary text-center">Редактиране</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="text-center">
	<a asp-area="Admin" asp-controller="RequestState" asp-action="AddRequestState" class="btn btn-secondary">Добавяне</a>
</div>


