@using Helpdesk.Core.Models.Directorates
@model IEnumerable<AllDirectoratesViewModel>
@{
	ViewBag.Title = "Дирекции";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewData.ModelState["Error"].Errors.First().ErrorMessage
	</div>
}

<table class="table table-striped">
	<thead>
		<tr>
			<th>Наименование</th>
			<th>Активна Да/Не</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td><label>@item.Name</label></td>
				<td>
					@if (item.IsActive == true)
					{
					<label>✔</label>
					}
					else
					{
					<label class="text-center">❌</label>
					}
				</td>
				<td>
					<a asp-controller="Directorate" asp-action="EditDirectorate" asp-route-Id="@item.Id" class="btn btn-primary text-center">Редактиране</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="text-center">
	<a asp-area="Admin" asp-controller="Directorate" asp-action="AddDirectorate" class="btn btn-secondary">Добавяне</a>
</div>
