@model EditGoodsInShop
@{
	ViewBag.Title = "Edit Goods in Shop";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewData.ModelState["Error"].Errors.First().ErrorMessage
	</div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">  

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"  />
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
               @*  <span asp-validation-for="Description" class="small text-danger"></span> *@
            </div>

            <div class="form-group">
                <label asp-for="SellPrice"></label>
                <input asp-for="SellPrice" class="form-control">
                <span asp-validation-for="SellPrice" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SoldDate"></label>
                <input asp-for="SoldDate" class="form-control">               
            </div>
         
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
