@model AddInterestViewModel
@{
	ViewBag.Title = "Add Interest";
}

<h2 class="text-center">@ViewBag.Title</h2>
<h5 class="text-center">AgreementId: @Model.AgreementId</h5>
<hr />
<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="AgreementViewModel.GoodName">Good Name</label>
				<input asp-for="AgreementViewModel.GoodName" class="form-control" disabled>				
			</div>
			<div class="form-group">
				<label asp-for="AgreementViewModel.Duration">Duration</label>
				<input asp-for="AgreementViewModel.Duration" class="form-control" disabled>
			</div>
			<div class="form-group">
				<label asp-for="AgreementViewModel.EndDate">End Date</label>
				<input asp-for="AgreementViewModel.EndDate" class="form-control" disabled>
			</div>
			<div class="form-group">
				<label asp-for="AgreementViewModel.ReturnPrice">Return Price</label>
				<input asp-for="AgreementViewModel.ReturnPrice" class="form-control" disabled>
			</div>
			<div class="form-group">
				<label asp-for="ValueInterest">Interest</label>
				<input asp-for="ValueInterest" class="form-control" disabled/> 
				<span asp-validation-for="ValueInterest" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DateInterest">Date Interest</label>
				<input asp-for="DateInterest" class="form-control" disabled>
				<span asp-validation-for="DateInterest" class="small text-danger"></span>
			</div>

			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
			<div>
				<button type="button" class="btn btn-danger mt-3" onclick="window.history.back()">Cancel</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}